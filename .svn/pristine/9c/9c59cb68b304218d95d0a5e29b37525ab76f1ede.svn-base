<% if @data.present? %>
  Weekly Report <br><br>
  <table border="1">
    <tr>
      <th>Project Name</th>
      <%date=Date.today.beginning_of_week-1%>
      <th><%=date%></th>
      <th><%=date+1%></th>
      <th><%=date+2%></th>
      <th><%=date+3%></th>
      <th><%=date+4%></th>
      <th><%=date+5%></th>
      <th><%=date+6%></th>
    </tr>

    <% @data.map do |i| %>
      <tr>
        <td><%=i[0]%></td>	
        <td><%=i[1][0][1]%></td>	
        <td><%=i[1][1][1]%></td>	
        <td><%=i[1][2][1]%></td>
        <td><%=i[1][3][1]%></td>
        <td><%=i[1][4][1]%></td>
        <td><%=i[1][5][1]%></td>
        <td><%=i[1][6][1]%></td>
      </tr>
    <% end %>
  </table>
<% else %>
  Sorry No Projects Available
<% end %>